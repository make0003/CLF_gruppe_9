<div class="buttons_forside">
  <button>Festival 2024</button>
  <button>Map</button>
  <button>Tidligere</button>
</div>

<style>
  button {
    border-color: var(--font-color);

    background: none;
    font-family: "Montserrat", sans-serif;
    color: var(--font-color);
    padding: 10px;
    font-size: 1.5rem;
    text-transform: uppercase;
    border-width: 5px;
    font-weight: bold;
  }

  .buttons_forside {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    margin-right: 40%;
    gap: 30px;
    margin-top: -60px;
    margin-left: 10px;
  }

  button:hover {
    color: #fff;
    text-align: center;
    -webkit-animation: glow 1s ease-in-out infinite alternate;
    -moz-animation: glow 1s ease-in-out infinite alternate;
    animation: glow 1s ease-in-out infinite alternate;
  }

  @-webkit-keyframes glow {
    from {
      text-shadow:
        0 0 10px #fff,
        0 0 20px #fff,
        0 0 30px #fff,
        0 0 40px #ffffff,
        0 0 50px #fff,
        0 0 60px #fff,
        0 0 70px #fff;
    }
    to {
      text-shadow:
        0 0 20px #fff,
        0 0 30px #fff,
        0 0 40px #fff,
        0 0 50px #fff,
        0 0 60px #fff,
        0 0 70px #fff,
        0 0 80px #fff;
    }
  }

  @media screen and (max-width: 1200px) {
    button {
      font-size: 1.3rem;
    }
  }
  @media screen and (max-width: 800px) {
    button {
      margin-top: 50px;
      margin-right: 50px;
      margin-left: 50px;
      padding-left: 20px;
      padding-right: 20px;
    }

    .buttons_forside {
      grid: none;
      position: relative;
      margin-left: auto;
      margin-right: auto;
      gap: 0;
    }
  }
</style>
